<ul class="list-group songs">
  {{#unless promptToCreateFirstSong}}
    <li class="list-group-item">
      <form class="new-song-form" {{action "createSong" on="submit"}}>
        {{input type="text" class="new-song" placeholder=(concat "New " (capitalize band.name) " song") value=title}}
        <button type="submit" class="btn btn-primary btn-sm new-song-button"
                disabled={{isAddButtonDisabled}}>Add</button>
      </form>
    </li>
    <li class="btn-group song-filter-search-panel" role="group">
      <div class="sorting-panel">
        {{#link-to (query-params sortBy="-rating,title") class="sorting-link"}}
          <button type="button" class="btn btn-default sort-rating-desc sorting-button">Rating
            <span class="glyphicon glyphicon-arrow-down"></span>
          </button>
        {{/link-to}}
        {{#link-to (query-params sortBy="rating,title") class="sorting-link"}}
          <button type="button" class="btn btn-default sort-rating-asc sorting-button">Rating
            <span class="glyphicon glyphicon-arrow-up"></span>
          </button>
        {{/link-to}}
        {{#link-to (query-params sortBy="-title") class="sorting-link"}}
          <button type="button" class="btn btn-default sort-title-desc sorting-button">Title
            <span class="glyphicon glyphicon-arrow-down"></span>
          </button>
        {{/link-to}}
        {{#link-to (query-params sortBy="title") class="sorting-link"}}
          <button type="button" class="btn btn-default sort-title-asc sorting-button">Title
            <span class="glyphicon glyphicon-arrow-up"></span>
          </button>
        {{/link-to}}
      </div>
      <div class="pagination-links">
        {{#if hasPrevPage}}
          {{#link-to (query-params pageNumber=(dec pageNumber)) class="btn btn-default"}}
            <span class="glyphicon glyphicon-arrow-left"></span>
          {{/link-to}}
        {{/if}}
        {{#if hasNextPage}}
          {{#link-to (query-params pageNumber=(inc pageNumber)) class="btn btn-default"}}
            <span class="glyphicon glyphicon-arrow-right"></span>
          {{/link-to}}
        {{/if}}
      </div>
      <div class="search-panel">
        <input type="text" value={{searchInput}} class="search-field" oninput={{action (mut searchInput) value="target.value" }} />
        <div class="input-group-btn">
          <button class="btn btn-default search-button" {{action "searchSongs" searchTerm}}>
            <span class="glyphicon glyphicon-search" aria-label="search" aria-hidden="true"></span>
          </button>
        </div>
      </div>
      <div class="clearfix"></div>
    </li>
  {{/unless}}
  {{#each model as |song|}}
    <li class="list-group-item song">
      {{capitalize song.title}}
      {{star-rating item=song rating=song.rating on-click=(action "updateRating")}}
    </li>
  {{/each}}
  {{#if noMatchingSongs}}
    <li class="list-group-item empty-list">
      <div class="empty-message">
        No songs match your search.
      </div>
    </li>
  {{/if}}
  {{#if promptToCreateFirstSong}}
    <li class="list-group-item empty-list">
      <div class="empty-message">
        There are no songs yet. Why don't you <a href="#" {{action "enableSongCreation"}}>create one?</a>
      </div>
    </li>
  {{/if}}
</ul>
