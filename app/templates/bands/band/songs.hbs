<ul class="list-group songs">
  {{#unless promptToCreateFirstSong}}
    <li class="list-group-item">
      <form class="new-song-form" {{action "createSong" on="submit"}}>
        {{input type="text" class="new-song" placeholder=(concat "New " (capitalize band.name) " song") value=title}}
        <button type="submit" class="btn btn-primary btn-sm new-song-button"
                disabled={{isAddButtonDisabled}}>Add</button>
      </form>
    </li>
    <li class="btn-group song-filter-search-panel" role="group">
      <div class="sorting-panel">
        {{#link-to (query-params sortBy="ratingDesc") class="sorting-link"}}
          <button type="button" class="btn btn-default sort-rating-desc sorting-button" disabled={{isLoadingSongs}}>Rating
            <span class="glyphicon glyphicon-arrow-down"></span>
          </button>
        {{/link-to}}
        {{#link-to (query-params sortBy="ratingAsc") class="sorting-link"}}
          <button type="button" class="btn btn-default sort-rating-asc sorting-button" disabled={{isLoadingSongs}}>Rating
            <span class="glyphicon glyphicon-arrow-up"></span>
          </button>
        {{/link-to}}
        {{#link-to (query-params sortBy="titleDesc") class="sorting-link"}}
          <button type="button" class="btn btn-default sort-title-desc sorting-button" disabled={{isLoadingSongs}}>Title
            <span class="glyphicon glyphicon-arrow-down"></span>
          </button>
        {{/link-to}}
        {{#link-to (query-params sortBy="titleAsc") class="sorting-link"}}
          <button type="button" class="btn btn-default sort-title-asc sorting-button" disabled={{isLoadingSongs}}>Title
            <span class="glyphicon glyphicon-arrow-up"></span>
          </button>
        {{/link-to}}
      </div>
      <div class="search-panel">
        <input type="text" value={{searchTerm}} class="search-field" oninput={{action (mut searchTerm) value="target.value" }} disabled={{isLoadingSongs}} />
        <div class="input-group-btn">
          <button class="btn btn-default search-button" {{action "searchSongs" searchTerm}}>
            <span class="glyphicon glyphicon-search" aria-label="search" aria-hidden="true"></span>
          </button>
        </div>
      </div>
      <div class="clearfix"></div>
    </li>
  {{/unless}}
  {{#if isLoadingSongs}}
    <div class="loading-pane">
      <div class="loading-message">
        Still loading your songs...
        <div class="spinner"></div>
      </div>
    </div>
  {{else}}
    {{#each sortedSongs as |song|}}
      <li class="list-group-item song">
        {{capitalize song.title}}
        {{star-rating item=song rating=song.rating on-click=(action "updateRating")}}
      </li>
    {{/each}}
  {{/if}}
  {{#if noMatchingSongs}}
    <li class="list-group-item empty-list">
      <div class="empty-message">
        No songs match your search.
      </div>
    </li>
  {{/if}}
  {{#if promptToCreateFirstSong}}
    <li class="list-group-item empty-list">
      <div class="empty-message">
        There are no songs yet. Why don't you <a href="#" {{action "enableSongCreation"}}>create one?</a>
      </div>
    </li>
  {{/if}}
</ul>
